<mvc:View
        controllerName="org.ubb.books.controller.BookActions"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        xmlns="sap.m"
>

    <Table id="deleteBookTable"
           items="{
			path: '/Books',
			sorter: {
				path: 'Title'
			}
		}"
           growing="true"
           growingThreshold="10"
           mode="SingleSelectLeft">

        <headerToolbar>
            <Toolbar>
                <content>
                    <Button
                            text="{i18n>deleteBookButton}"
                            press="onDeleteBook"
                    />
                    <Button
                            id="updateDialogButton"
                            text="{i18n>updateBookButton}"
                            press="onUpdateDialogOpen"/>
					<Button
							id="addDialogButton"
							text="{i18n>addBookButton}"
							press="onAddDialogOpen"/>

                </content>
            </Toolbar>
        </headerToolbar>

        <columns>
            <Column>
                <Text text="{i18n>title}"/>
            </Column>
            <Column>
                <Text text="{i18n>author}"/>
            </Column>
            <Column>
                <Text text="{i18n>published}"/>
            </Column>
            <Column>
                <Text text="{i18n>available}"/>
            </Column>
            <Column>
                <Text text="{i18n>total}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier
                            title="{Title}"
                            text="{Isbn}"/>
                    <Text text="{Author}"/>
                    <Text text="{
							path: 'Published',
							type: 'sap.ui.model.type.Date'
               			}"
                    />
                    <Text text="{= parseInt(${AvailableAmount}) }"/>
                    <Text text="{= parseInt(${TotalAmount}) }"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
